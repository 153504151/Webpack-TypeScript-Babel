{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "projecr": [
            "./tsconfig.json"
        ]
    },
    "plugins": [
        "@typescript-eslint/eslint-plugin"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "rules": {
        "accessor-pairs": 2,
        "arrow-spacing": [
            2,
            {
                "before": true,
                "after": true
            }
        ],
        "array-bracket-spacing": [
            2,
            "never"
        ],
        "object-curly-spacing": [
            2,
            "always"
        ],
        "keyword-spacing": [
            2,
            {
                "before": true,
                "after": true
            }
        ],
        "space-infix-ops": [
            2
        ],
        "space-before-blocks": [
            2,
            "always"
        ],
        "block-spacing": [
            2,
            "always"
        ],
        "comma-dangle": [
            2,
            "never"
        ],
        "comma-style": [
            2,
            "last"
        ],
        "eqeqeq": [
            2,
            "allow-null"
        ],
        "func-call-spacing": [
            2, 
            "never"
        ],
        "semi-spacing": [
            2, 
            {
                "before": false, 
                "after": true
            }
        ],
        "no-const-assign": 2,
        "no-delete-var": 2,
        "no-dupe-args": 2,
        "no-fallthrough": 2,
        "no-eval": 2,
        "no-implied-eval": 2,
        "no-floating-decimal": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-lone-blocks": 2
    }
}
